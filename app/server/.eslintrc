{
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "plugins": [
      "import"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "eslint-config-prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": ["warn"], // disallow unused variables,
      "eqeqeq": ["error"], // require the use of === and !==, 
      "curly": ["error"], // enforce consistent brace style for all control statements
      "camelcase": ["error"], // enforce camelcase naming convention
      "import/no-commonjs":["error"] // disallow CommonJS `require` and `module.exports`
    } 
  
  }