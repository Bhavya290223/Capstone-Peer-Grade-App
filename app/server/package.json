{
  "name": "app",
  "version": "1.0.0",
  "description": "The actual source files of a software project are usually stored inside the src folder. Alternatively, you can put them into the lib (if you're developing a library), or into the app folder (if your application's source files are not supposed to be compiled).",
  "main": "./src/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon ./src/index.js",
    "start": "node ./src/index.js",
    "prisma": "npx prisma generate && npx prisma db push",
    "test": "jest",
    "lint": "eslint . --ext js --report-unused-disable-directives",
    "lint-fix": "eslint . --ext js --report-unused-disable-directives --fix",
    "format": "prettier --write './**/*.js'",
    "format-and-lint": "npm run format && npm run lint-fix"
  },
  "_moduleAliases": {
    "@": "src/*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "module-alias": "^2.2.3",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.7",
    "babel-jest": "^29.7.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.1",
    "prisma": "^5.15.0",
    "supertest": "^7.0.0"
  }
}
